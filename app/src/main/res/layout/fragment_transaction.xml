<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    tools:context=".fragments.TransactionFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:id="@+id/balance_display"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?customTitleColor"
                    android:id="@+id/previous"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_next"
                    android:background="@drawable/ripple_effect"
                    android:scaleX="-1"
                    />

                <TextView
                    android:id="@+id/month_spinner"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5sp"
                    android:gravity="center"
                    android:text="MONTH"
                    android:background="@drawable/background_color_ripple"
                    android:textColor="@drawable/text_color_ripple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="?customTitleColor"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_next"
                    android:background="@drawable/ripple_effect"
                    android:id="@+id/next"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="10sp"
                android:id="@+id/expenses_income_display"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@id/balance_display"
                android:layout_width="match_parent"
                android:layout_height="100sp">
                <LinearLayout
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/expense_display"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/income_display"
                    android:layout_width="0dp"
                    android:layout_marginEnd="5sp"
                    android:background="@drawable/display_ripple"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_income_alt"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="?colorOnPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Income"/>
                    <TextView
                        android:id="@+id/monthly_income"
                        android:textStyle="bold"
                        android:textColor="?colorOnPrimary"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Php 20.00"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/display_ripple"
                    android:orientation="vertical"
                    android:layout_marginStart="5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/income_display"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/expense_display"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_expense_alt"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="?colorOnPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Expenses"/>
                    <TextView
                        android:id="@+id/monthly_expenses"
                        android:textStyle="bold"
                        android:textColor="?colorOnPrimary"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Php 20.00"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/export_button"
                app:layout_constraintTop_toBottomOf="@id/expenses_income_display"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintVertical_bias="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export"/>
            <TextView
                android:layout_margin="10sp"
                android:id="@+id/transactions_title"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/export_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:textColor="?customTitleColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5sp"
                android:layout_marginBottom="0sp"
                android:paddingHorizontal="10sp"
                app:layout_constraintVertical_bias="0"
                android:id="@+id/monthly_transactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/transactions_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>