<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10sp"
    android:background="?formBackground">

    <TextView
        android:id="@+id/title_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?customTitleColor"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"/>
    <ImageButton
        android:id="@+id/dismiss_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.99"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:backgroundTint="?customTitleColor"
        android:background="@drawable/x_symbol_svgrepo_com"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10sp"
        android:background="@drawable/container_transparent_borderless"
        android:id="@+id/dialog_profile_section"
        android:layout_marginHorizontal="15sp"
        android:layout_marginVertical="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog"
        app:layout_constraintVertical_bias="0">
        <TextView
            android:id="@+id/dialog_profile_header"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"
            android:textColor="?customTitleColor"/>
        <TextView
            android:id="@+id/dialog_username"
            app:layout_constraintTop_toBottomOf="@id/dialog_profile_header"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:textColor="?customTitleColor"
            android:text="Currently logged as: User"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10sp"
        android:background="@drawable/container_transparent_borderless"
        android:id="@+id/dialog_support_section"
        android:layout_marginHorizontal="15sp"
        android:layout_marginVertical="10sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_profile_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintVertical_bias="0"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_support_header"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textSize="20sp"
            android:textColor="?customTitleColor"/>
        <ImageView
            android:id="@+id/dialog_gcash_qr"
            app:layout_constraintTop_toBottomOf="@id/dialog_support_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@mipmap/ic_dono"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Consider supporting via the QR."
            android:layout_marginStart="5sp"
            android:textColor="?customTitleColor"
            app:layout_constraintTop_toBottomOf="@id/dialog_gcash_qr"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_version_section"
        android:layout_marginHorizontal="15sp"
        android:padding="10sp"
        android:layout_marginVertical="10sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_support_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/container_transparent_borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_version_header"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textSize="20sp"
            android:textColor="?customTitleColor"/>
        <TextView
            android:id="@+id/dialog_version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Ver. 1.0.0"
            android:layout_marginStart="5sp"
            android:textColor="?customTitleColor"
            app:layout_constraintTop_toBottomOf="@id/dialog_version_header"/>
        <TextView
            android:id="@+id/dialog_contact_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/contact_email"
            android:layout_marginStart="5sp"
            android:textColor="?customTitleColor"
            app:layout_constraintTop_toBottomOf="@id/dialog_version_number"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_logout_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_logout"
        app:iconGravity="end"
        android:text="Logout"/>
</androidx.constraintlayout.widget.ConstraintLayout>